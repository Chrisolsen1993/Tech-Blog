
{{#each posts as |post| }}
<a href ="/viewpost/{{post.id}}">
{{log post}}
  <section>
            <div class="P-title">
              <h3>{{title}}</h3>
            </div>
            <div class="content">
              <p>
               {{content}} 
              </p>
            </div>
              <div class="date-post">
                
                <h5 id="date">Posted by {{post.user.username}} on {{format_date post.date_created}}</h5>
              </div>
           
  </section>
  </a>
{{/each}}