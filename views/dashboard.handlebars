
 <div>
    <h3>DASHBOARD</h3>
  </div>




<div class="row">
  <div class="col-auto">
    <h2 id="Uname">Welcome, <span class="name">{{username}}</span>!</h2>
  </div>
</div>
<h2 id="currentP"> Current Posts</h2>
{{#if posts.length}}
{{#each posts as |post| }}
<a href="/editpost/{{post.id}}">
  <section>
    
            <div class="P-title">
              <h3>{{title}}</h3>
            </div>
            <div class="content">
              <p>
               {{content}} 
              </p>
            </div>
              <div class="date-post">
                
                <h5 id="date">Posted on {{format_date post.date_created}}</h5>
              </div>
           
  </section>
  </a>
{{/each}}
{{/if}}
<button type="submit" class="btn"><a class="link" href="/newpost">+ New Post</a></button>

